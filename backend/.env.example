# Database
DATABASE_URL=sqlite:///./storage/scorescan.db

# Valkey (Redis-compatible)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication (Change this in production!)
SECRET_KEY=your-super-secret-key-change-me-in-production

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Storage
STORAGE_PATH=./storage
MAX_UPLOAD_SIZE_MB=50

# External tools (paths inside Docker container)
# Audiveris 5.9 installed from .deb package
AUDIVERIS_PATH=/opt/audiveris/bin/Audiveris
# MuseScore 4 AppImage
MUSESCORE_PATH=/opt/musescore.AppImage
